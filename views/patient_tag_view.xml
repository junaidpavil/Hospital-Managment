<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_patient_tag_tree" model="ir.ui.view">
        <field name="name">patient.tag.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_patient_tag_form" model="ir.ui.view">
        <field name="name">patient.tag.form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="color_2" widget="color"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


   <record id="action_hospital_appointment1" model="ir.actions.act_window">
        <field name="name">Patient Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
             <p class="o_innocent_view_smiling_face">
                Create your first appointment!
             </p>
        </field>
    </record>
    <menuitem id="menu_patient_tag"
              name="Tags"
              action="action_hospital_appointment1"
              parent="menu_hospital_configuration"
              />


</odoo>